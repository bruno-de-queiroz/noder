extends ../layouts/default

block styles
	link(rel='stylesheet', href='/css/libs/jwysiwyg/jquery.wysiwyg.css')
block scripts
	script(src='/js/libs/jwysiwyg/jquery.wysiwyg.js',type="application/javascript")
	script(src='/js/libs/jwysiwyg/controls/wysiwyg.image.js',type="application/javascript")
	script(src='/js/libs/jwysiwyg/controls/wysiwyg.link.js',type="application/javascript")
	script(src='/js/libs/jwysiwyg/controls/wysiwyg.table.js',type="application/javascript")
	script(src='/js/articles/form.js',type="application/javascript")

block left-content
	- var action = '/articles/add'
	if (!article.isNew)
		- action = '/articles/'+article.id

	if (typeof errors !== 'undefined')
			ul
				each error in errors
					li= error.type

	form(method="post", action=action, enctype="multipart/form-data")
		if (!article.isNew)
			input(type="hidden", name="_method", value="PUT")

		fieldset#hidden
			input#images(type='file', name="image[]")
			input#title(type='text', name="title", value=article.title, placeholder="#{__('Enter the title')}")
			input#tags(type='text', name="tags", value=article.tags, placeholder="#{__('Enter the tags')}")
		textarea#desc(type='text', rows="5", name="body", placeholder="#{__('Enter the article description')}")=article.body

		fieldset#action
			button.purple(type='submit') #{__('Publish')}
