extends ../layouts/default

block left-content
	h1= __('Articles')
	ul
		each article in articles
			li
				span.action
					i.icon.eye-open
					i.icon.chevron-right
				article
					h2
						a.title(href='/articles/'+article._id, title=article.title, target="_blank") #{article.title}
					p
						i.icon.time
						| &nbsp;#{__d(article.createdAt)}&nbsp;&nbsp;
						if(!article.published)
							a(href='/articles/'+article._id+'/edit',title=__("Edit"))
								i.icon.edit
								| &nbsp;#{__("Edit article")}&nbsp;&nbsp;
							span.link.remove(rel=article._id,title=__("Remove"))
								i.icon.remove-sign
								| &nbsp;#{__("Remove")}&nbsp;&nbsp;
						else
							i.icon.comment
							| &nbsp;#{article.comments.length}&nbsp;
							| #{__("comments")}&nbsp;&nbsp;
							i.icon.share
							| &nbsp;#{req.user.meta.shares}&nbsp;
							| #{__("shares")}&nbsp;&nbsp;
							i.icon.thumbs-up
							| &nbsp;#{req.user.meta.likes}&nbsp;
							| #{__("likes")}&nbsp;&nbsp;

						if (article.tags)
							i.icon.tags
							| &nbsp;#{__('Tags')}&nbsp;
							each tag in article.tags.split(',')
								a(href="/tags/"+tag)= tag
				if(article.published)
					p
						i.icon.check
						| #{__("Published")}
				else
					span.button.purple(rel=article._id,title=__("Publish")) #{__("Publish")}


block right-content
	h1 #{__("Metrics")}&nbsp;
		i.icon.chevron-down
	h2 #{__("Statistics")}&nbsp;
		i.icon.plus-sign
	canvas#graph
	ul#metrics-info
		li.block
			h3 #{__("Likes")}
			ul
				- for (var i = 0; i < 16; ++i)
					li
						span.image.example
		li.block
			h3 #{__("Followers")}
			ul
				- for (var i = 0; i < 16; ++i)
					li
						span.image.example
		li.block
			h3 #{__("+1")}
			ul
				- for (var i = 0; i < 16; ++i)
					li
						span.image.example
	section#comments
		h3 #{__("Comments")}
		ul
			- for (var i = 0; i < 8; ++i)
				li.comment
					span.image.example
					article
						h4 Bruno de Queiroz
						i.icon.time  6 minutes ago
						p Very interesting way to blog about something...
