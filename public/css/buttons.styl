button(color,icon = '\f00c',align = center)
	display inline-block
	vertical-align baseline
	font-family opensans
	font-weight 300
	font-size 18px
	line-height 18px
	width 160px
	text-align align
	cursor pointer
	background color
	box-shadow inset 0 1px 0px darken(color,15)
	border-radius 3px
	appearance none
	border none
	padding 5px 10px
	color #fcfdff
	text-transform uppercase
	position relative
	margin 2px
	&:after
		content icon
		font-family iconfont
		position absolute
		right 10px
		top 5px
	&:hover
		background darken(color,5)
		box-shadow inset 0 1px 0 darken(color,15)
		transition all .2s
	&:disabled, &.disabled
		cursor default
		box-shadow inset 0 1px 0 darken(color,20)
		background darken(color,15)
		color lighten(color,5)
	&:active, &.active
		margin 3px 2px 1px 2px

button.red, .button.red
	button(red-color,'\f00c')

button.green, .button.green
	button(green-color,'\f00c')

button.purple, .button.purple
	button(main-color,'\f00c')

button.facebook, .button.facebook
	button(facebook-color,'\f082',left)

button.twitter, .button.twitter
	button(twitter-color,'\f081',left)

button.google-plus, .button.google-plus
	button(google-plus-color,'\f0d4',left)