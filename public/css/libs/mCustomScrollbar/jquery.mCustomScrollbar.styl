@import 'nib'
/* basic scrollbar styling */
/* vertical scrollbar */
.mCSB_container
	width auto
	margin-right 30px
	overflow hidden
	&.mCS_no_scrollbar
		margin-right 0

.mCS_disabled .mCSB_container.mCS_no_scrollbar,
.mCS_destroyed .mCSB_container.mCS_no_scrollbar
	margin-right 30px

.mCustomScrollBox
	.mCSB_scrollTools
		width 16px
		height 100%
		top 0
		right 0

.mCSB_scrollTools
	.mCSB_draggerContainer
		height 100%
		box-sizing border-box
	.mCSB_buttonUp+.mCSB_draggerContainer
		padding-bottom:40px
	.mCSB_draggerRail
		width 4px
		height 100%
		margin 0 auto
		border-radius 10px
	.mCSB_dragger
		cursor pointer
		width 100%
		height 30px
		.mCSB_dragger_bar
			width 4px
			height 100%
			margin 0 auto
			border-radius 10px
			text-align center
	.mCSB_buttonUp,.mCSB_buttonDown
		height 20px
		overflow hidden
		margin 0 auto
		cursor pointer
	.mCSB_buttonDown
		bottom 0
		margin-top -40px;

.mCSB_horizontal
	.mCSB_container
		height auto
		margin-right 0
		margin-bottom 30px
		overflow hidden
	.mCSB_container.mCS_no_scrollbar
		margin-bottom 0
	&.mCustomScrollBox
		.mCSB_scrollTools
			width 100%
			height 16px
			top auto
			right auto
			bottom 0
			left 0
			overflow hidden
	.mCSB_scrollTools
		.mCSB_draggerContainer
			height 100%
			width auto
			box-sizing border-box
			overflow hidden
		.mCSB_buttonLeft+.mCSB_draggerContainer
			padding-bottom 0
			padding-right 20px
		.mCSB_draggerRail
			width 100%
			height 2px
			margin 7px 0
			border-radius 10px
		.mCSB_dragger
			width 30px
			height 100%
			.mCSB_dragger_bar
				width 100%
				height 4px
				margin 6px auto
				border-radius 10px
		.mCSB_buttonLeft, .mCSB_buttonRight
			width 20px
			height 100%
			overflow hidden
			margin 0 auto
			cursor pointer
			float left
		.mCSB_buttonRight
			right 0
			bottom auto
			margin-left -40px
			margin-top -16px
			float right


.mCS_disabled .mCSB_horizontal .mCSB_container.mCS_no_scrollbar,
.mCS_destroyed .mCSB_horizontal .mCSB_container.mCS_no_scrollbar
	margin-right 0
	margin-bottom 30px


/* default scrollbar colors and backgrounds */
.mCustomScrollBox
	.mCSB_scrollTools
		opacity 0.75
	&:hover
		.mCSB_scrollTools
			opacity 1


.mCSB_scrollTools
	.mCSB_draggerRail
		background #EEE /* rgba fallback */
		background rgba(0,0,0,0.1)
	.mCSB_dragger
		.mCSB_dragger_bar
			background #666 /* rgba fallback */
			background rgba(0,0,0,0.15)
		&:hover
			.mCSB_dragger_bar
				background #333
				background rgba(0,0,0,0.25)
		&:active, &.mCSB_dragger_onDrag
			.mCSB_dragger_bar
				background #555
				background rgba(0,0,0,0.20)
	.mCSB_buttonUp, .mCSB_buttonDown, .mCSB_buttonLeft, .mCSB_buttonRight
		background-image url(mCSB_buttons.png)
		background-repeat no-repeat
		opacity 0.4
		&:hover
			opacity:0.75;
		&:active
			opacity:0.9;
	.mCSB_buttonUp
		background-position 0 0
	/*
	sprites locations are 0 0/-16px 0/-32px 0/-48px 0 (light) and -80px 0/-96px 0/-112px 0/-128px 0 (dark)
	*/
	.mCSB_buttonDown
		background-position 0 -20px
	/*
	sprites locations are 0 -20px/-16px -20px/-32px -20px/-48px -20px (light) and -80px -20px/-96px -20px/-112px -20px/-128px -20px (dark)
	*/
	.mCSB_buttonLeft
		background-position 0 -40px
	/*
	sprites locations are 0 -40px/-20px -40px/-40px -40px/-60px -40px (light) and -80px -40px/-100px -40px/-120px -40px/-140px -40px (dark)
	*/
	.mCSB_buttonRight
		background-position 0 -56px
	/*
	sprites locations are 0 -56px/-20px -56px/-40px -56px/-60px -56px (light) and -80px -56px/-100px -56px/-120px -56px/-140px -56px (dark)
	*/