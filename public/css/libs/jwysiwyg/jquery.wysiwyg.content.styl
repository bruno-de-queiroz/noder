main-color = #8a25cd
light-grey-color = #f1f1f1
main-grey-color = #555
background-color = #e9e9e9
side-font-color = #1d1d1d
green-color = #4adb76
red-color = #e7635e
facebook-color = #3a5a93
twitter-color = #18aacf
google-color = #1f1f1f
marvel = 'Marvel', sans-serif
opensans = 'Open Sans', sans-serif
ostrich = 'ostrich_sans_roundedmedium', sans-serif
iconfont = 'FontAwesome', "Open Sans", sans-serif

@import "../../fonts"

html
	padding 10px 20px
	overflow hidden
	color main-grey-color
	font-family opensans

h1,h2,h3,h4,p 
	margin 5px 0
h1 
	font-family ostrich
	font-size 42px
	font-weight normal
	text-transform uppercase
h1.placeholder
	color darken(background-color,10)
h2 
	font-family opensans
	font-size 24px
	font-weight 300
h3 
	font-family marvel
	font-size 22px
	font-weight normal
p, div, ul, li
	font-family opensans
	font-size 14px
small
	font-family opensans
	font-size 12px
body 
	position absolute
	top 0
	bottom 0px
	overflow-y auto
	left 10px
	right 0px

