input[type=text], input[type=date], input[type=number], input[type=password], textarea
	border-radius 5px
	font-family opensans
	font-size 16px
	background light-grey-color
	color main-grey-color
	box-shadow inset 0 2px 0px darken(light-grey-color,10)
	border none
	padding 8px 10px
	letter-spacing -1px
	transition all .2s
	&:focus
		background white
		outline none
		transition all .2s

input[type=checkbox]
	appearance none

input[type=checkbox]:before
	content '\f096'
	font-family iconfont
	font-size 16px
	color main-grey-color

input[type=checkbox]:checked:before
	content '\f046'
	color green-color