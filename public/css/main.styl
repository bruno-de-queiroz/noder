@import 'nib'
@import 'nib/gradients'

global-reset()

main-color = #8a25cd
light-grey-color = #f1f1f1
main-grey-color = #555
background-color = #e9e9e9
side-font-color = #1d1d1d
green-color = #4adb76
red-color = #e7635e
facebook-color = #3a5a93
twitter-color = #18aacf
google-plus-color = #1f1f1f
marvel = 'Marvel', sans-serif
opensans = 'Open Sans', sans-serif
ostrich = 'ostrich_sans_roundedmedium', sans-serif
iconfont = 'FontAwesome', "Open Sans", sans-serif

@import fonts

@import icons

@import buttons

@import forms

body
	font-size 62.5%
	font-family "Arial","sans-serif"
	margin 0
	padding 0
	background url("../img/watermark.png") center center no-repeat background-color fixed

header#left-header
	h1#logo
		background: url('../img/logo.png') left top no-repeat
		display inline-block
		width 178px
		height 60px
		text-indent -500px
		overflow hidden
		margin 10px


p.message
	font-size 12px
	color main-grey-color
	i.icon
		margin-right 3px

section#mid-content
	background white
	border-radius 5px
	display inline-block
	margin 0 auto
	overflow hidden
	h1
		font-family ostrich
		color main-color
		font-size 34px
		margin 0 0 20px 0

.login-page section#mid-content
	position fixed
	left 50%
	top 50%
	height 270px
	width 615px
	margin-top -(@height / 2)
	margin-left -(@width / 2)

section#login
	float left
	width 265px
	height 220px
	padding 25px
	position relative
	text-align center
	h1
		text-align left
	input:first-child
		margin-bottom 20px
	input
		width 90%
	button
		position absolute
		bottom 25px
		left 50%
		margin-left -90px
	p.message
		margin-top 10px

section#signup
	width 250px
	padding 25px
	background lighten(background-color,2)
	overflow hidden
	p
		font-family opensans
		font-size 15px
		color lighten(main-grey-color,10)
		margin 0 0 20px 0
		line-height 20px
	.button
		display block
		width auto
		text-decoration none