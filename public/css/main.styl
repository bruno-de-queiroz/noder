@import 'nib'
@import 'nib/gradients'

global-reset()

main-color = #8a25cd
light-grey-color = #f1f1f1
main-grey-color = #555
background-color = #e9e9e9
side-font-color = #1d1d1d
green-color = #4adb76
red-color = #e7635e
facebook-color = #3a5a93
twitter-color = #18aacf
google-color = #1f1f1f
marvel = 'Marvel', sans-serif
opensans = 'Open Sans', sans-serif
ostrich = 'ostrich_sans_roundedmedium', sans-serif
iconfont = 'FontAwesome', "Open Sans", sans-serif

@import fonts

@import icons

@import buttons

@import forms

triangles(color=background-color,size="18px")
	background -o-linear-gradient(-45deg, transparent 25%, transparent 25%) -50px 0,
		-o-linear-gradient(-135deg, transparent 25%, transparent 25%) -50px 0,
		-o-linear-gradient(-225deg, color 25%, transparent 25%),
		-o-linear-gradient(45deg, color 25%, transparent 25%)
	background -moz-linear-gradient(-45deg, transparent 25%, transparent 25%) -50px 0,
		-moz-linear-gradient(-135deg, transparent 25%, transparent 25%) -50px 0,
		-moz-linear-gradient(-225deg, color 25%, transparent 25%),
		-moz-linear-gradient(45deg, color 25%, transparent 25%)
	background -webkit-linear-gradient(-45deg, transparent 25%, transparent 25%) -50px 0,
		-webkit-linear-gradient(-135deg, transparent 25%, transparent 25%) -50px 0,
		-webkit-linear-gradient(-225deg, color 25%, transparent 25%),
		-webkit-linear-gradient(45deg, color 25%, rgba(255, 255, 255, 0) 25%)
	background-size size size
	background-color transparent

body
	font-size 62.5%
	font-family "Arial","sans-serif"
	margin 0
	padding 0
	background url("../img/watermark.png") center center no-repeat background-color fixed

header#left-header
	h1#logo
		background: url('../img/logo.png') left top no-repeat
		display inline-block
		width 180px
		height 60px
		text-indent -500px
		overflow hidden
		margin 10px 0 10px 10px
		padding 0 20px 0 0
		vertical-align middle
	section#user-info
		border-left 1px solid darken(background-color,5)
		display inline-block
		vertical-align middle
		figure
			border-left 1px solid lighten(background-color,5)
			display inline-block
			width 50px
			height 50px
			margin 0
			padding 0 20px 0 20px
			text-align center
			.add-image 
				cursor pointer
				color white
				display inline-block
				line-height 50px
				background main-color
				width 50px
				&:hover
					background lighten(main-color,10)

		div.info
			display inline-block
			vertical-align middle
			ul
				display inline-block
				border-radius 5px
				overflow hidden
				margin 0 10px
				vertical-align middle
				li
					display inline-block
					background white
					vertical-align middle
					a
						text-decoration none
						.icon
							color darken(background-color,10)
							cursor pointer
							line-height 22px
							font-size 14px
							padding 0 5px
							&:hover
								color main-grey-color
				li + li
					border-left 1px solid #DDD
			h2
				display inline-block
				font-family ostrich
				font-size 32px
				color main-color
				vertical-align middle

			p
				font-family marvel
				font-size 20px
				margin 3px 0
				a
					text-decoration none
					color main-grey-color
					&:hover
						color lighten(main-grey-color,15)
				em
					font-style italic
					font-size 16px

p.message
	font-size 12px
	color main-grey-color
	i.icon
		margin-right 3px

section#mid-content
	background white
	border-radius 5px
	display inline-block
	margin 0 auto
	overflow hidden
	h1
		font-family ostrich
		color main-color
		font-size 34px
		margin 0 0 20px 0

.login-page section#mid-content
	position fixed
	left 50%
	top 50%
	height 270px
	width 615px
	margin-top -(@height / 2)
	margin-left -(@width / 2)

section#login
	float left
	width 265px
	height 220px
	padding 25px
	position relative
	text-align center
	h1
		text-align left
	input:first-child
		margin-bottom 20px
	input
		width 90%
	button
		position absolute
		bottom 25px
		left 50%
		margin-left -90px
	p.message
		margin-top 10px

section#signup
	width 250px
	padding 25px
	background lighten(background-color,2)
	overflow hidden
	p
		font-family opensans
		font-size 15px
		color lighten(main-grey-color,10)
		margin 0 0 20px 0
		line-height 20px
	.button
		display block
		width auto
		text-decoration none

.user-setup-page section#mid-content
	background lighten(background-color,2)
	position fixed
	width 730px
	height 400px
	left 50%
	top 50%
	margin-left -(@width/2)
	margin-top -(@height/2)

	fieldset#account-info
		float left
		width 380px
		padding 25px 25px 70px 25px
		position relative
		overflow hidden
		background white
		h1
			text-align left
		figure
			display block
			width 90px
			height 90px
			padding 0
			margin 0
			float left
			margin 0 17px 0 0
			border 1px solid #DDD
			background background-color
			text-align center
			line-height 110px
			transition all .2s
			.add-image
				cursor pointer
				font-size 38px
				color main-color
				&:hover
					color lighten(main-color,10)
					transition all .2s
		input
			margin-bottom 18px
			width 250px
		textarea
			width 360px
			height 120px
			resize none
		button
			position absolute
			bottom 25px
			left 50%
			margin-left -90px
		p.message
			margin-top 10px

	fieldset#bind-to
		width 250px
		padding 25px
		overflow hidden
		input[type=checkbox]
			vertical-align middle
			cursor pointer
		label
			font-family marvel
			font-size 15px
			color lighten(main-grey-color,10)
			margin 0 0 20px 0
			line-height 20px
			vertical-align middle
		a
			display block
			width auto
			text-decoration none
			font-size 21px
			margin-bottom 20px
			font-family opensans
			font-weight 300
			letter-spacing -2px
			transition all .2s
			i.icon
				margin 0 10px 0 0
				font-size 26px
				vertical-align middle
			&.facebook
				color facebook-color
			&.twitter
				color twitter-color
			&.google
				color google-color
			&:hover
				opacity 0.7
				transition all .2s

	fieldset#action
		position absolute
		bottom 0
		background darken(background-color,1)
		padding 10px
		left 0
		right 0
		text-align center
		&:before
			content ''
			display block
			width 100%
			height 30px
			triangles(darken(background-color,1),18px)
			position absolute
			top -18px
			left 0

section#left-content
	padding 25px
	h1
		font-family ostrich
		font-size 46px
		color main-color
	ul
		li
			background lighten(background-color,2)
			box-shadow 0 -2px 0px darken(background-color,10)
			padding 10px
			border-radius 5px
			overflow hidden
			position relative
			span.action
				cursor pointer
				position absolute
				left 10px
				top 50%
				margin-top -17px
				display inline-block
				width 45px
				text-align center
				color darken(background-color,5)
				font-size 32px
				&:hover
					color darken(background-color,10)
				i.icon.chevron-right
					display none
				&.active
					cursor default
					color main-color
					border none
					padding 0
					i.icon.eye-open
						display none
					i.icon.chevron-right
						display block
			span.button
				position absolute
				right 20px
				top 50%
				margin-top -17px
				width 150px
			article
				margin 0 0 0 50px
				h2
					font-size 20px
					font-weight 300
					font-family opensans
					a
						color  main-color
				a
					text-decoration none
					vertical-align middle
				p
					color main-grey-color
					font-size 16px
					font-family marvel
					margin 10px 0
					vertical-align middle
					i.icon
						vertical-align baseline
					a, .link
						vertical-align baseline
						cursor pointer
						color main-grey-color
						&:hover
							color lighten(main-grey-color,20)
			&.active
				background white